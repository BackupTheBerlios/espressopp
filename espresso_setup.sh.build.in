# Shell-script that sets the required environment variables to run 
# ESPResSo++ from the build path.
# Please source this script in the shell that you use to execute
# espresso, by using
#
# . @abs_top_builddir@/espresso_setup.sh
#
# if the pythonpath is not set in the environment, use the one
# specified by configure
if test "x$PYTHONPATH" = "x"; then
   PYTHONPATH=@PYTHONPATH@
fi

# Add the ES++ specific path
ESPP_PYTHONPATH=@abs_top_builddir@:@abs_top_builddir@/espresso/.libs
if test "x$PYTHONPATH" = "x"; then
    PYTHONPATH=$ESPP_PYTHONPATH
else
    PYTHONPATH=$PYTHONPATH:$ESPP_PYTHONPATH
fi

export PYTHONPATH
echo "PYTHONPATH=$PYTHONPATH"

