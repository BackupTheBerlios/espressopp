# Shell-script that sets the required environment variables to run 
# ESPResSo++ from the build path.
# @configure_input@
#
# Please source this script in the shell that you use to execute
# espresso, by using
#
# . @abs_top_builddir@/espresso_setup.sh
#

abs_top_builddir="@abs_top_builddir@"

# Add the ES++ specific python path
if test "x$PYTHONPATH" = "x"; then
    PYTHONPATH=$abs_top_builddir
else
    PYTHONPATH=$PYTHONPATH:$abs_top_builddir
fi
export PYTHONPATH
echo "PYTHONPATH=$PYTHONPATH"

# Add the ES++ specific path
espp_path=$abs_top_builddir/bin
if test "x$PATH" = "x"; then
    PATH=$espp_path
else
    PATH=$PATH:$espp_path
fi
export PATH
echo "PATH=$PATH"
