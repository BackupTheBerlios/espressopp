# Python script that sets the correct path to the ESPResSo++ module,
# if ES++ is used in the build path.
# @configure_input@
# 
# To use it, put the follwoing line at the top of your script:
#
#   execfile("@abs_top_builddir@/espresso_setup.py")
#

def __espresso_setup() :
    import os, sys

    # Add the python path from configure
    boost_root="@BOOST_ROOT@"
    if boost_mpi_python_dir: 
       sys.path.insert(0, os.path.join(boost_root, "lib"))
    # Add the top-level build dir
    top_builddir="@abs_top_builddir@"
    sys.path.insert(0, top_builddir)
    # Add the dir containing the es++ python module
    sys.path.insert(0, os.path.join(top_builddir, "src", ".libs"))

__espresso_setup()
del(__espresso_setup)

